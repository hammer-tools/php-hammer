        <localInspection language="PHP"
                         groupPath="PHP,PHP Hammer"
                         groupName="Code style"
                         enabledByDefault="true"
                         displayName="Class self-reference format normalization"
                         level="WEAK WARNING"
                         shortName="ClassSelfReferenceFormatInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeStyle.ClassSelfReferenceFormatInspection" />

        <localInspection language="PHP"
                         groupPath="PHP,PHP Hammer"
